<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">


<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

<h1>Bookdetails#index</h1>
<p>Find me in app/views/bookdetails/index.html.erb</p>


<div class="Container">

    <table class="table table-hover" >
    <thead>
        <tr>
            
            <th>Author</th>
            <th>Description</th>
            <th>ISBN</th>
            <th>Title</th>
            <th>Cover Page</th>
            <th>Actions</th>
            
        </tr>
    </thead>
    <% for item in @body %>
    
    <tr>
        <td><%= item['Author'] %></td>
        <td><%= item['Description'] %></td>
        <td><%= item['ISBN'] %></td> 
    
        <td><%= item['Title'] %></td> 
         <td><img  src="<%= item['Image'] %>" width="80" height="100"></td>


        <td>
        
             <%= link_to 'Edit',updatebook_index_path(id: item['_id']['$oid'],Author: item['Author'],ISBN: item['ISBN'],Description: item['Description'],Title: item['Title'],Image: item['Image']),class:"btn btn-warning" %>
        
            <%= link_to 'Delete',delete_path(id:item['_id']['$oid']),method: :delete,class:"btn btn-danger",data: { :confirm=> 'Are you Sure?' }%>
    
        </td>      
    </tr>
    
    <% end %>
    
    
    </table>

     <div class="form-group col-sm-6">
        <%= link_to 'Go to Insert Page',root_path,class:"btn btn-success" %>
    </div>
  
</div>
